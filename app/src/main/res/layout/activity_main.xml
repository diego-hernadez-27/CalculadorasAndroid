            app:layout_constraintStart_toStartOf="@+id/guideline9"
            app:layout_constraintTop_toTopOf="@+id/guideline15" />

        <Button
            android:id="@+id/bigual"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#EF476F"
