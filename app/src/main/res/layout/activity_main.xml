            app:layout_constraintTop_toTopOf="@+id/guideline15" />

        <Button
            android:id="@+id/Cuatro"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#063341"
            android:foregroundTint="#EF476F"
            android:onClick="EscribirCuatro"
            android:text="4"
            android:textAlignment="center"
            android:textColor="#EF476F"
            android:textSize="42sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline14"
            app:layout_constraintEnd_toStartOf="@+id/guideline8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline13" />

        <Button
            android:id="@+id/Siete"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#063341"
            android:foregroundTint="#EF476F"
            android:onClick="EscribirSiete"
            android:text="7"
            android:textAlignment="center"
            android:textColor="#EF476F"
            android:textSize="42sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline15"
            app:layout_constraintEnd_toStartOf="@+id/guideline8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline14" />

        <Button
            android:id="@+id/Nueve"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#063341"
            android:foregroundTint="#EF476F"
            android:onClick="EscribirNueve"
            android:text="9"
            android:textAlignment="center"
            android:textColor="#EF476F"
            android:textSize="42sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline15"
            app:layout_constraintEnd_toStartOf="@+id/guideline10"
            app:layout_constraintStart_toEndOf="@+id/Ocho"
            app:layout_constraintTop_toTopOf="@+id/guideline14" />

        <Button
            android:id="@+id/bmenos"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#063341"
            android:foregroundTint="#EF476F"
            android:hapticFeedbackEnabled="true"
            android:onClick="OperacionRestar"
            android:text="-"
            android:textAlignment="center"
            android:textColor="#EF476F"
            android:textSize="42sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/Nueve"
            app:layout_constraintTop_toTopOf="@+id/guideline14"
            app:layout_constraintVertical_bias="1.0"
            app:strokeColor="#063341" />

        <Button
            android:id="@+id/Ocho"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#063341"
            android:foregroundTint="#EF476F"
            android:onClick="EscribirOcho"
            android:text="8"
            android:textAlignment="center"
            android:textColor="#EF476F"
            android:textSize="42sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline15"
            app:layout_constraintEnd_toStartOf="@+id/guideline9"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline8"
            app:layout_constraintTop_toTopOf="@+id/guideline14"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/Seis"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#063341"
            android:foregroundTint="#EF476F"
            android:onClick="EscribirSeis"
            android:text="6"
            android:textAlignment="center"
            android:textColor="#EF476F"
            android:textSize="42sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline14"
            app:layout_constraintEnd_toStartOf="@+id/guideline10"
            app:layout_constraintStart_toEndOf="@+id/Cinco"
            app:layout_constraintTop_toTopOf="@+id/guideline13" />

        <Button
            android:id="@+id/bmas"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#063341"
            android:foregroundTint="#EF476F"
            android:onClick="OperacionSumar"
            android:text="+"
            android:textAlignment="center"
            android:textColor="#EF476F"
            android:textSize="42sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline10"
            app:layout_constraintTop_toTopOf="@+id/guideline13"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/Cinco"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#063341"
            android:foregroundTint="#EF476F"
            android:onClick="EscribirCinco"
            android:text="5"
            android:textAlignment="center"
            android:textColor="#EF476F"
            android:textSize="42sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline14"
            app:layout_constraintEnd_toStartOf="@+id/guideline9"
            app:layout_constraintStart_toStartOf="@+id/guideline8"
            app:layout_constraintTop_toTopOf="@+id/guideline13" />

        <Button
            android:id="@+id/Dos"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#063341"
            android:foregroundTint="#EF476F"
            android:onClick="EscribirDos"
            android:text="2"
            android:textAlignment="center"
            android:textColor="#EF476F"
            android:textSize="42sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline13"
            app:layout_constraintEnd_toStartOf="@+id/guideline9"
            app:layout_constraintStart_toStartOf="@+id/guideline8"
            app:layout_constraintTop_toTopOf="@+id/guideline12" />

        <Button
            android:id="@+id/Tres"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#063341"
            android:foregroundTint="#EF476F"
            android:onClick="EscribirTres"
            android:text="3"
            android:textAlignment="center"
            android:textColor="#EF476F"
            android:textSize="42sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline13"
            app:layout_constraintEnd_toStartOf="@+id/guideline10"
            app:layout_constraintStart_toStartOf="@+id/guideline9"
            app:layout_constraintTop_toTopOf="@+id/guideline12" />

        <Button
            android:id="@+id/bmulti"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#063341"
            android:foregroundTint="#EF476F"
            android:onClick="OperacionMultiplicar"
            android:text="×"
            android:textAlignment="center"
            android:textColor="#EF476F"
            android:textSize="42sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline10"
            app:layout_constraintTop_toBottomOf="@+id/bdivision" />
