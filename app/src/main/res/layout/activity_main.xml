            app:layout_constraintGuide_begin="88dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:backgroundTint="#063341"
            android:onClick="siguiente"
            android:text="@string/BotonCientifica"
            android:textColor="#EF476F"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" /><![CDATA[









        android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline11"
            app:layout_constraintEnd_toEndOf="@+id/vistas"
            app:layout_constraintStart_toStartOf="@+id/vistas"
            app:layout_constraintTop_toTopOf="@+id/vistas">





